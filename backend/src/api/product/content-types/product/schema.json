{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "precio": {
      "type": "decimal",
      "required": true
    },
    "referencia": {
      "type": "string",
      "unique": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "is_generic": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "seoMetadata": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo-metadata"
    },
    "motos_compatibles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::bike-model.bike-model",
      "inversedBy": "products"
    },
    "fitment_detail": {
      "type": "component",
      "repeatable": true,
      "component": "motors.fitment-detail"
    },
    "product_variants": {
      "type": "component",
      "repeatable": true,
      "component": "shop.product-variant"
    }
  }
}
