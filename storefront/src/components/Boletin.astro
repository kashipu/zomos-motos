---
interface Props {
  titulo?: string;
  descripcion?: string;
}

const {
  titulo = "Únete al Moto Club",
  descripcion = "Recibe ofertas exclusivas, lanzamientos anticipados y consejos de expertos mecánicos directamente en tu bandeja.",
} = Astro.props;
---

<section class="py-20 max-w-7xl mx-auto px-6 lg:px-20 border-t border-white/5">
  <div
    class="bg-primary/10 border border-primary/20 rounded-2xl p-10 flex flex-col lg:flex-row items-center justify-between gap-10"
  >
    <div class="max-w-md space-y-4">
      <h2
        class="text-3xl font-bold italic uppercase tracking-tighter italic font-display"
      >
        Únete al <span class="text-primary">Moto Club</span>
      </h2>
      <p class="text-zinc-400">
        {descripcion}
      </p>
    </div>

    <form class="w-full max-w-md flex flex-col sm:flex-row gap-3">
      <input
        class="flex-1 bg-background-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all placeholder:text-zinc-500"
        placeholder="Tu correo electrónico"
        type="email"
        required
      />
      <button
        type="submit"
        class="bg-primary hover:bg-red-700 text-white font-bold uppercase tracking-widest px-8 py-3 rounded-lg transition-all"
      >
        Suscribirse
      </button>
    </form>
  </div>
</section>




