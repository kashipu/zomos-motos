---
import { ArrowRight } from "lucide-react";

const categorias = [
  {
    titulo: "Equipamiento para el Piloto",
    descripcion:
      "Protección de élite para la máxima velocidad. Cascos, trajes y guantes profesionales.",
    imagen:
      "https://images.unsplash.com/photo-1591637333184-19aa84b3e01f?auto=format&fit=crop&q=80&w=800",
    enlace: "/productos?category=piloto",
    cta: "Explorar catálogo",
  },
  {
    titulo: "Lujos para Moto",
    descripcion:
      "Sistemas de escape, piezas CNC y mejoras de rendimiento de primer nivel.",
    imagen:
      "https://images.unsplash.com/photo-1599819811279-d5ad9cccf838?auto=format&fit=crop&q=80&w=800",
    enlace: "/productos?category=moto",
    cta: "Explorar piezas",
  },
];
---

<section class="py-20 max-w-7xl mx-auto px-6 lg:px-20">
  <div class="flex items-end justify-between mb-10">
    <div>
      <span class="text-primary font-bold uppercase tracking-widest text-xs"
        >Explora la colección</span
      >
      <h2 class="text-4xl font-bold tracking-tight text-white font-display">
        Categorías Principales
      </h2>
    </div>
    <a
      href="/productos"
      class="hidden sm:flex items-center gap-2 text-zinc-400 hover:text-primary transition-colors text-sm font-bold uppercase tracking-wider group"
    >
      Ver todo <ArrowRight
        size={18}
        className="group-hover:translate-x-1 transition-transform"
      />
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      categorias.map((cat) => (
        <a
          href={cat.enlace}
          class="group relative aspect-[16/9] overflow-hidden rounded-xl bg-card-dark cursor-pointer"
        >
          <img
            src={cat.imagen}
            alt={cat.titulo}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-70 group-hover:opacity-100"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent flex flex-col justify-end p-8">
            <h3 class="text-2xl font-bold text-white uppercase italic tracking-tighter font-display">
              {cat.titulo}
            </h3>
            <p class="text-zinc-300 mt-2 max-w-xs text-sm line-clamp-2">
              {cat.descripcion}
            </p>
            <div class="mt-4 flex items-center gap-2 text-primary font-bold text-sm uppercase translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
              {cat.cta} <ArrowRight size={16} />
            </div>
          </div>
        </a>
      ))
    }
  </div>
</section>




